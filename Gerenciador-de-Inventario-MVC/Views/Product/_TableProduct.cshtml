@using Application.DTO
@model Application.DTO.ProductDTO

@{
    this.Layout = null;
}

<div class="container mt-4">
<table id="productsTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Descrição</th>
            <th scope="col">Preço</th>
            <th scope="col">Unidade de Medida</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductDTO product in Model.ListProducts)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.UnitType</td>

                <td>
                    <div class="dropdown-table">
                        <button class="gear-button" onclick="toggleDropdownMenu(event)">
                            <span class="material-symbols-outlined">
                                settings
                            </span>
                        </button>
                        <ul class="dropdown-table-menu">
                            <li>
                                <a class="d-flex align-items-center" onclick="OpenFormProduct(@product.Id)">
                                    <span class="material-symbols-outlined fs-5 me-2">
                                        edit
                                    </span>
                                    Editar
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" onclick="OpenDetailProduct(@product.Id)">
                                    <span class="material-symbols-outlined fs-5 me-2">
                                        info
                                    </span>
                                    Detalhar
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<script src="~/js/Domain/Product/TableProduct.js" asp-append-version="true"></script>
