@using Shared.Helper
@model Application.DTO.PermissionGroupDTO

@{
    this.Layout = null;
}

<form id="permissionGroupForm">
    <input asp-for="Id" hidden />

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="permissionTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                Informações Gerais
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="permissions-tab" data-bs-toggle="tab" data-bs-target="#permissions" type="button" role="tab" aria-controls="permissions" aria-selected="false">
                Permissões
            </button>
        </li>
    </ul>

    <div class="tab-content" id="permissionTabsContent" style="margin-top: 20px">
        <!-- Informações Gerais -->
        <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
            <div class="row">
                <div class="form-group col-md-2">
                    <label for="id">Id</label>
                    <input type="number" class="form-control" asp-for="Id" disabled />
                </div>
                <div class="form-group col-md-10">
                    <label for="name">Nome do Grupo de Permissão</label>
                    <input type="text" class="form-control" asp-for="Name" required />
                </div>
                
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label for="description">Descrição</label>
                    <textarea maxlength="400" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Permissões -->
        <div class="tab-pane fade" id="permissions" role="tabpanel" aria-labelledby="permissions-tab">
            <div class="row mt-3">
                <div class="form-group col-md-3">
                    <label asp-for="ActionEmployee">Acessa Funcionários?</label>
                    <select asp-for="ActionEmployee" class="form-select"
                            asp-items="@(new SelectList(ListStandard.GetListValuesPermission(), "Value", "Text", Model.ActionEmployee))">
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ActionPermissionGroup">Acessa Grupo de Permissão?</label>
                    <select asp-for="ActionPermissionGroup" class="form-select"
                            asp-items="@(new SelectList(ListStandard.GetListValuesPermission(), "Value", "Text", Model.ActionPermissionGroup))">
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ActionProduct">Acessa Produtos?</label>
                    <select asp-for="ActionProduct" class="form-select"
                            asp-items="@(new SelectList(ListStandard.GetListValuesPermission(), "Value", "Text", Model.ActionProduct))">
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="ActionStockMovements">Acessa Movimentação de Estoque?</label>
                    <select asp-for="ActionStockMovements" class="form-select"
                            asp-items="@(new SelectList(ListStandard.GetListValuesPermission(), "Value", "Text", Model.ActionStockMovements))">
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>

