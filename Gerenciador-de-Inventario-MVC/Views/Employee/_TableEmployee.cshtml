@using Application.DTO
@using Shared.Helper
@model Application.DTO.EmployeeDTO

@{
}

<table id="employeeTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">
                <input type="checkbox" id="selectAll" />
            </th>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Cargo</th>
            <th scope="col">Email</th>
            <th scope="col">Grupo de Permissão</th>
            <th scope="col">Situação</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (EmployeeDTO employee in Model.ListEmployees)
        {
            <tr>
                <td>
                    <input type="checkbox" class="selectItem" />
                </td>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Function</td>
                <td>@employee.Email</td>
                <td>@employee.permissionGroupDTO.Name</td>
                <td class="status-user center-align">
                    <span class="chip @ListStandard.ValidateActiveInativeColor(employee.Status)">
                        <span class="text-white">
                            @ListStandard.ValidateActiveInative(employee.Status)
                        </span>
                    </span>
                </td>
                <td>
                    <div class="dropdown-table">
                        <button class="gear-button" onclick="toggleDropdownMenu(event)">
                            <span class="material-symbols-outlined">
                                settings
                            </span>
                        </button>
                        <ul class="dropdown-table-menu">
                            <li>
                                <a class="d-flex align-items-center" onclick="OpenFormEmployee(@employee.Id)">
                                    <span class="material-symbols-outlined fs-5 me-2">
                                        edit
                                    </span>
                                    Editar
                                </a>
                            </li>
                            <li>
                                <a class="d-flex align-items-center" onclick="OpenDetailEmployee(@employee.Id)">
                                    <span class="material-symbols-outlined fs-5 me-2">
                                        info
                                    </span>
                                    Detalhar
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/Domain/Employee/TableEmployee.js" asp-append-version="true"></script>
